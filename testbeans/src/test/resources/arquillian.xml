<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">


    <container qualifier="glassfish-embedded" default="true">
        <configuration>
            <property name="configurationXml">src/test/resources/glassfish-config/domain.xml</property>
            <property name="resourcesXml">src/test/resources/glassfish-config/glassfish-resources.xml</property>
        </configuration>
    </container>
</arquillian>